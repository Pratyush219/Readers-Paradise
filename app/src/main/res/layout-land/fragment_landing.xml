<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".LandingFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".LandingFragment">
        <include layout="@layout/toolbar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0sp"
            android:layout_weight="0.1"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:layout_marginTop="24dp"
            android:src="@drawable/cover_photo"
            android:contentDescription="@string/landing_image"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:fontFamily="@font/ubuntu_medium"
            android:layout_marginTop="40dp"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:text="@string/intro_to_app"
            android:gravity="center"
            android:paddingStart="72dp"
            android:paddingEnd="72dp"/>

        <Button
            android:id="@+id/begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="88dp"
            android:fontFamily="@font/ubuntu_medium"
            android:background="@drawable/button_ripple"
            android:layout_marginTop="88dp"
            app:backgroundTint="@color/start_button"
            android:paddingStart="96dp"
            android:paddingTop="16dp"
            android:paddingEnd="96dp"
            android:paddingBottom="16dp"

            android:text="@string/let_s_go"
            android:textSize="16sp"
            android:textColor="@color/black"/>



    </LinearLayout>
</ScrollView>